{% extends 'base.html.twig' %}

{% block title %}Книга {{ book.name }}{% endblock %}

{% block content %}
    <h1>Книга {{ book.name }}</h1>

    <div class="row">
        <div class="col-6">
            <img class="book-image" src="{{ book.mainImage }}"/>
        </div>
        <div class="col-6">
            <div class="mt-2">
                <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-info btn-sm">
                    <i class="fa fa-edit"></i>
                </a>
                <a href="" class="btn btn-danger btn-sm" onclick="return confirm('Вы уверены?')" >
                    <i class="fa fa-trash"></i>
                </a>
            </div>
            <table class="table">
                <tbody>            
                    <tr>
                        <td class="fw-bold">Название</td>                            
                        <td>{{ book.name }}</td>
                    </tr>                          
                    <tr>
                        <td class="fw-bold">Год</td>                            
                        <td>{{ book.year }} г.</td>
                    </tr>                          
                    <tr>
                        <td class="fw-bold">Добавлена на сайт</td>                            
                        <td>{{ book.tsCreate|date('d.m.Y H:i:s') }}</td>
                    </tr>                         
                    <tr>
                        <td class="fw-bold">Описание</td>                            
                        <td>{{ book.description }}</td>
                    </tr>  
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
